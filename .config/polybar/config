bar-volume-indicator =
bar-volume-indicator-font = 2
;bar-volume-indicator-foreground = #ff
bar-volume-fill = 
bar-volume-fill-font = 2
bar-volume-empty = 
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.active}

format-volume-padding= 0
format-volume-margin = 0

; Interval for volume increase/decrease (in percent points) (unreleased)
; Default: 5
interval = 5

[module/temperature]
type = internal/temperature

; Seconds to sleep between updates
; Default: 1
interval = 0.5

; Thermal zone to use
; To list all the zone types, run 
; $ for i in /sys/class/thermal/thermal_zone*; do echo "$i: $(<$i/type)"; done
; Default: 0
thermal-zone = 0

; Full path of temperature sysfs path
; Use `sensors` to find preferred temperature source, then run
; $ for i in /sys/class/hwmon/hwmon*/temp*_input; do echo "$(<$(dirname $i)/name): $(cat ${i%_*}_label 2>/dev/null || echo $(basename ${i%_*})) $(readlink -f $i)"; done
; to find path to desired file
; Default reverts to thermal zone setting
hwmon-path = /sys/devices/virtual/hwmon/hwmon4/temp1_input

; Base temperature for where to start the ramp (in degrees celsius)
; Default: 0
base-temperature = 20

; Threshold temperature to display warning label (in degrees celsius)
; Default: 80
warn-temperature = 60
; Available tokens:
;   %temperature% (deprecated)
;   %temperature-c%   (default, temperature in °C)
;   %temperature-f%   (temperature in °F)
;
format = <label>
label = %temperature-c%
label-background = ${colors.active}
format-underline = ${colors.background}
format-overline = ${colors.background}
label-padding = 3
label-margin = 1

[module/powermenu]
type = custom/menu

format-spacing = 2

label-open = "襤    power"
label-open-padding = 2
label-open-foreground = ${colors.red}
label-close = cancel
label-close-padding = 2
label-close-foreground = ${colors.white}
label-separator = " | "
;label-separator-background= ${colors.active}
;label-separator-foreground = ${colors.white}

menu-0-0 = logout
menu-0-0-foreground = ${colors.red}
menu-0-0-exec = i3-msg exit
menu-0-1 = reboot
menu-0-1-foreground = ${colors.red}
menu-0-1-exec = systemctl reboot
menu-0-2 = power off
menu-0-2-foreground = ${colors.red}
menu-0-2-exec = systemctl poweroff

[module/battery]
type = internal/battery

; This is useful in case the battery never reports 100% charge
full-at = 99

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = AC

; If an inotify event haven't been reported in this many
; seconds, manually poll for new values.
;
; Needed as a fallback for systems that don't report events
; on sysfs/procfs.
;
; Disable polling by setting the interval to 0.
;
; Default: 5
poll-interval = 5
; see "man date" for details on how to format the time string
; NOTE: if you want to use syntax tags here you need to use %%{...}
; Default: %H:%M:%S
time-format = %H:%M

; Available tags:
;   <label-charging> (default)
;   <bar-capacity>
;   <ramp-capacity>
;   <animation-charging>
format-charging = <animation-charging> <label-charging>

; Available tags:
;   <label-discharging> (default)
;   <bar-capacity>
;   <ramp-capacity>
;   <animation-discharging>
format-discharging = <animation-discharging> <label-discharging>

; Available tags:
;   <label-full> (default)
;   <bar-capacity>
;   <ramp-capacity>
;format-full = <ramp-capacity> <label-full>

; Available tokens:
;   %percentage% (default) - is set to 100 if full-at is reached
;   %percentage_raw%
;   %time%
;   %consumption% (shows current charge rate in watts)
label-charging = Charging %percentage%%
format-charging-background = ${colors.active}
format-charging-underline = ${colors.background}
format-charging-overline = ${colors.background}
format-charging-padding = 2


; Available tokens:
;   %percentage% (default) - is set to 100 if full-at is reached
;   %percentage_raw%
;   %time%
;   %consumption% (shows current discharge rate in watts)
label-discharging = Discharging %percentage%%
format-discharging-background = ${colors.active}
format-discharging-underline = ${colors.background}
format-discharging-overline = ${colors.background}
format-discharging-padding = 2

; Available tokens:
;   %percentage% (default) - is set to 100 if full-at is reached
;   %percentage_raw%
label-full = Fully charged
label-full-background = ${colors.active}
label-full-underline = ${colors.background}
label-full-overline = ${colors.background}
label-full-padding = 2
label-full-margin = 3


; Only applies if <ramp-capacity> is used
;ramp-capacity-0 = 
;ramp-capacity-1 = 
;ramp-capacity-2 = 
;ramp-capacity-3 = 
;ramp-capacity-4 = 
;ramp-capacity-5 = 

; Only applies if <bar-capacity> is used
; bar-capacity-width = 10

; Only applies if <animation-charging> is used
animation-charging-9 = 

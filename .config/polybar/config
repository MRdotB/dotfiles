label-mode-foreground = #000
label-mode-background = ${colors.primary}

label-focused = %index%
label-focused-background = ${colors.active}
label-focused-underline = ${colors.gold}
label-focused-padding = 2

label-unfocused = %index%
label-unfocused-padding = 2

label-urgent = %index%!
label-urgent-background = ${colors.red}
label-urgent-padding = 2

label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

[module/pkgupdate]
type = custom/script
exec = /usr/lib/update-notifier/apt-check 2>&1 | awk 'BEGIN{FS=";"}{printf("%i updates", $1)}'
interval = 1800
format-background = ${colors.active}
format-underline = ${colors.background}
format-overline = ${colors.background}
format-padding = 2
format-margin = 3

[module/networkname]
type = custom/script
exec = nmcli -t -g device,name connection show --active | awk 'BEGIN{FS=":";}{if($1 == "wlp2s0"){printf $2} }'
interval = 60
format-background = ${colors.active}
format-underline = ${colors.background}
format-overline = ${colors.background}
format-padding = 2
format-margin = 3

[module/localip]
type = custom/script
exec = ip route get 8.8.8.8 | awk '{printf $7}'
interval = 1800
format-background = ${colors.active}
format-underline = ${colors.background}
format-overline = ${colors.background}
format-padding = 2
format-margin = 3

[module/ip]
type = custom/script
exec = curl -s ipinfo.io/ip
interval = 1800
format-background = ${colors.active}
format-underline = ${colors.background}
format-overline = ${colors.background}
format-padding = 2
format-margin = 3

